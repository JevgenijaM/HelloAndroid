<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#B2EBF2">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/pr1"
        android:scaleType="centerCrop"
        android:id="@+id/image_pr1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_pr1"
        android:layout_centerHorizontal="true"
        android:text="Udacity"
        android:textSize="16dp"
        android:textColor="#039BE5"
        android:id="@+id/udacity_textView1"
        android:fontFamily="cursive"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/udacity_textView1"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:text="650-555-555"
        android:textSize="16dp"
        android:textColor="#039BE5"
        android:id="@+id/udacity_textView2"
        android:fontFamily="cursive"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/udacity_textView2"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:text="www.udacity.com"
        android:textSize="16dp"
        android:textColor="#039BE5"
        android:id="@+id/udacity_textView3"
        android:fontFamily="cursive"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/udacity_textView3"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:text="2465 Latham St, Mountain View, CA 94043"
        android:textSize="16dp"
        android:textColor="#039BE5"
        android:fontFamily="cursive"
        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/pr3"
        android:scaleType="centerCrop"
        android:id="@+id/image_pr3"
        android:layout_below="@id/udacity_textView4"
        android:layout_centerHorizontal="true"
</RelativeLayout>
